<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtons" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/buttons_gradient</item>
        <item name="android:layout_width">289dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_marginBottom">59dp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="EditTextNumbers" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:autofillHints">""</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:inputType">number</item>


        <item name="android:minHeight">48dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>